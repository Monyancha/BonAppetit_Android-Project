<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_height="match_parent"
             android:layout_width="match_parent"
            android:id="@+id/frame">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:map="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/map"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.example.android.foodapp.MapsActivity"/>
    <Button
        android:id="@+id/share_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_location"
        android:textColor="#f9f5f5"
        android:onClick="shareLocation"
        android:layout_gravity="bottom|center"
        android:drawableLeft="@drawable/ic_room_white_24dp"
        android:background="@drawable/maps_button"
        android:padding="5dp"
        android:layout_marginBottom="5dp"/>
    <Button
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_autorenew_blue_grey_300_24dp"
        android:background="@drawable/clear_map"
        android:onClick="clearMap"
        android:layout_gravity="top|right"/>
    /fragment>
</FrameLayout>